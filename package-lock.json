{
  "name": "Athena",
  "version": "0.1.0",
  "description": "Athena – seu Second‑Brain em Electron + SQLite",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TiagoPortilho/Athena.git"
  },
  "keywords": [
    "electron",
    "sqlite",
    "second-brain",
    "notion-clone"
  ],
  "author": "Tiago Portilho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TiagoPortilho/Athena/issues"
  },
  "homepage": "https://github.com/TiagoPortilho/Athena#readme",
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0"
  },
  "build": {
    "appId": "com.tiagoportilho.athena",
    "productName": "Athena",
    "copyright": "Copyright © 2025 Tiago Portilho",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Athena"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.ico"
    }
  }
}
