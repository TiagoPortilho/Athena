{
  "name": "athena",
  "projectName": "Athena",
  "version": "1.0.0",
  "description": "Athena – seu Second‑Brain em Electron + SQLite",
  "main": "src/scripts/main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TiagoPortilho/Athena.git"
  },
  "keywords": [
    "electron",
    "sqlite",
    "tauri-migration",
    "second-brain"
  ],
  "author": "Tiago Portilho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TiagoPortilho/Athena/issues"
  },
  "homepage": "https://github.com/TiagoPortilho/Athena#readme",
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0"
  },
  "build": {
    "appId": "com.tiagoportilho.athena",
    "productName": "Athena",
    "icon": "src/assets/images/icon.png",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "win": {
      "target": "nsis",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "window.menuBarVisibility": "hidden"
}
